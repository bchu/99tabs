{
  "manifest_version": 2,

  "name": "99tabs",
  "description": "I've got 99 problems and they're all Chrome tabs.",
  "version": "0.1",

  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["sidebar.css"],
      "js": ["sidebar.js"],
      "all_frame":false,
      "run_at":"document_start"
    }
  ],
  "content_security_policy": "script-src 'self' chrome-extension://; object-src 'self'",
  "background": {
    "scripts": ["tabs.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "frame/*",
    "frame/frame.html"
  ]
}